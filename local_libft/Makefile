# variable declaration*/

NAME	=	libft.a

INC		=	libft.h
SRC		=	ft_atoi.c\
			ft_bzero.c\
			ft_calloc.c\
			ft_isalnum.c\
			ft_isalpha.c\
			ft_isascii.c\
			ft_isdigit.c\
			ft_isprint.c\
			ft_itoa.c\
			ft_memchr.c\
			ft_memcmp.c\
			ft_memcpy.c\
			ft_memmove.c\
			ft_memset.c\
			ft_putchar_fd.c\
			ft_putendl_fd.c\
			ft_putnbr_fd.c\
			ft_putstr_fd.c\
			ft_split.c\
			ft_strchr.c\
			ft_strdup.c\
			ft_striteri.c\
			ft_strjoin.c\
			ft_strlcat.c\
			ft_strlcpy.c\
			ft_strlen.c\
			ft_strmapi.c\
			ft_strncmp.c\
			ft_strnstr.c\
			ft_strrchr.c\
			ft_strtrim.c\
			ft_substr.c\
			ft_tolower.c\
			ft_toupper.c

OBJ_DIR	=	.objs

FLAGS	=	-Wall -Wextra -Werror -I.
#Create .o file in an other directory*/
OBJ		=	$(addprefix $(OBJ_DIR)/, $(SRC:.c=.o))

#ALL call NAME call OBJ_DIR */
all	:	$(NAME)
#Create libft.a | @ --> Name | ^ --> OBJS
$(NAME) : $(OBJ)
	$(AR) rcs $@ $^
# Need all .c files and #include to do .o files*/
$(OBJ_DIR)/%.o : %.c $(INC)
	mkdir -p $(dir $@)
	$(CC) $(FLAGS) -c $< -o $@
#Clean : Only .o files
clean :
	$(RM) -rf $(OBJ)
	$(RM) -r $(OBJ_DIR)
# Fclean : Clean All
fclean :
	$(MAKE) clean
	$(RM) $(NAME)
# Re :  Clean all to restart
re :
	$(MAKE) fclean
	$(MAKE) all

.PHONY: all clean fclean re